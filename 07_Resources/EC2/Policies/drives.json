{
	"EC2PolicyDrive": {
		"Type" : "AWS::IAM::Policy",
		"Properties" : {
			"PolicyName": "drives",
			"Roles" : [
				{ "Ref": "EC2Role" }
			],
			"PolicyDocument" : {
				"Version": "2012-10-17",
				"Statement": [
					{
						"Effect": "Allow",
						"Action": [
							"ec2:AttachVolume",
							"ec2:DetachVolume",
							"ec2:DescribeVolumes",
							"elasticfilesystem:List*",
							"elasticfilesystem:Describe*",
							"elasticfilesystem:ClientMount"
						],
						"Resource": "*"
					}
				]
			}
		}
	}
}

